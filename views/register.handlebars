<div>
	<div class="login">

		{{# if hasErrors }}
		<div class="alert alert-danger">
			{{# each messages }}
			<p>
				{{this}}
			</p>
			{{/each}}
		</div>
		{{/if}}

      <form  method="POST">

        <div class="row">
          <label for="email" class="col-sm-2">
          Email</label>
          <div class="col-sm-10">
						<input type="hidden" name="_csrf" value={{csrfToken}}>
            <input type="text" class="form-control" id="email"
            name="email">
          </div>

        </div> <!-- End of form-group -->
        <div class="row">
          <label for="password" class="col-sm-2">
          Password</label>
          <div class="col-sm-10">
            <input type="password" class="form-control" id="password"
            name="password">
          </div>
        </div> <!-- End of form-group -->
				<div class="row">
          <label for="confirmPassword" class="col-sm-2">
          Confirm Password</label>
          <div class="col-sm-10">
            <input type="password" class="form-control" id="confirmPassword"
            name="confirmPassword">
          </div>
        </div> <!-- End of form-group -->
        <div class="row loginButton">

          <div class="col-sm-12">
            <button type="submit" >Submit</button>
          </div>

        </div> <!-- End of form-group -->

      </form>
	</div>
	<hr />
	<h3>已经登记了吗?</h3>
	<a id='menuButs' href="/login"><div class="bt">登录</div></a>
</div>
